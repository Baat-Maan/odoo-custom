<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_sale_order_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>

            <field name="arch" type="xml">
                <field name="payment_term_id" attrs="{'invisible': True}"/>
                <field name="pricelist_id" attrs="{'readonly': True}"/>

                <field name="partner_id" position="after">
                    <field name="jobsite_id" position="attributes">
                        <attribute name="options">{'no_create_edit': True, 'no_create': True, 'create_edit':False, 'create':False}</attribute>
                    </field>
                    <field name="godown"></field>
                    <field name="billing_street"></field>
                    <field name="billing_street2"></field>
                    <field name="billing_state_id"></field>
                    <field name="billing_country_id"></field>
                    <field name="billing_zip"></field>

                    <field name="delivery_street"></field>
                    <field name="delivery_street2"></field>
                    <field name="delivery_state_id"></field>
                    <field name="delivery_country_id"></field>
                    <field name="delivery_zip"></field>

                    <field name="freight_amount"></field>
                    <field name="delivery_date"/>
                    <field name="pickup_date"/>
                    <field name="security_amount"/>
                    <field name="freight_paid_by"/>
                    <field name="price_type"/>
                    <field name="below_min_price"/>
                    <field name="purchaser_phone"/>
                    <field name="purchaser_name"/>
                    <field name="purchaser_email"/>

                    <div>
                        <field name="otp" attrs="{'invisible': [('below_min_price', '=', False)]}"/>
                        <button name="request_otp" type="object" string="Request OTP" attrs="{'invisible': [('below_min_price', '=', False)]}"/>
                        <button name="verify_otp" type="object" string="Verify OTP" attrs="{'invisible': [('below_min_price', '=', False)]}"/>
                    </div>
                </field>

                <xpath expr="//group[@name='order_details']" position="replace">
                    <field name="pricelist_id" invisible="1"/>
                    <field name="validity_date" invisible="1"/>
                    <field name="date_order" invisible="1"/>
                    <field name="show_update_pricelist" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="tax_country_id" invisible="1"/>
                    <field name="payment_term_id" invisible="1"/>

                </xpath>

            </field>

        </record>

    </data>
</odoo>